    },

    { name = "strings.single-quoted.js"; begin = "'"; end = "'"; swallow = "\\\\."; foregroundColor = "#66CC33"; },
    { name = "strings.double-quoted.js"; begin = "\""; end = "\"";   swallow = "\\\\."; foregroundColor = "#66CC33"; },

    { name = "strings.regex.js"; begin = "/"; end = "/([igm]+)?";  foregroundColor = "#CCCC33";
